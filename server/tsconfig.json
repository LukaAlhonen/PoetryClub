{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "lib": [
      "es2020"
    ],
    "baseUrl": ".",
    "paths": {
      "@prisma/*": [
        "prisma/*"
      ] // alias for everything under prisma/
    },
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "types": [
      "node",
      "./global.d.ts",
      "vitest/globals"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src",
    "global.d.ts"
  ]
}
